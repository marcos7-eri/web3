@model IEnumerable<practicamvc.Models.ProductoModel>
@{
    ViewData["Title"] = "Productos";
}

<style>
    .table-card {
        border-radius: 15px;
        background: white;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        padding: 1.5rem;
    }

    .btn-gradient {
        border: none;
        border-radius: 25px;
        padding: 8px 20px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }

        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ddd;
        padding: 8px 12px;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102,126,234,0.25);
        }

    .btn-cancel {
        border-radius: 25px;
        padding: 8px 20px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Productos</h2>
    <a asp-action="Create" class="btn-gradient">Nuevo producto</a>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="text" name="q" value="@ViewBag.Q" class="form-control" placeholder="Buscar por nombre..." />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
    </div>
</form>

<div class="table-card">
    <table class="table table-striped table-hover shadow-sm mb-0">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th class="text-end">Precio (Bs)</th>
                <th class="text-end">Stock</th>
                <th style="width:190px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@(string.IsNullOrWhiteSpace(item.Descripcion) ? "—" : item.Descripcion)</td>
                    <td class="text-end">@item.Precio.ToString("N2")</td>
                    <td class="text-end">@item.Stock</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Ver</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
