@model practicamvc.Models.ClienteModel
@{
    ViewData["Title"] = "Detalle de cliente";
}

<style>
    .page-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 1.5rem;
    }

    .page-title {
        font-weight: 700;
        font-size: 1.6rem;
        color: #3a3a3a;
        margin-bottom: 1rem;
        text-align: center;
    }

    .detail-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        padding: 1.5rem;
        margin-bottom: 1rem;
    }

    dt.col-sm-3 {
        font-weight: 600;
        color: #555;
    }

    dd.col-sm-9 {
        color: #333;
        margin-bottom: 0.5rem;
    }

    .actions {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        margin-top: 1rem;
    }

    .btn-warning {
        border-radius: 10px;
        padding: 10px 18px;
        font-weight: 600;
    }

    .btn-secondary {
        border-radius: 10px;
        padding: 10px 18px;
        font-weight: 600;
    }

    {
        flex-direction: column;
    }

    }</style>

<div class="page-container">
    <h2 class="page-title">Detalle de cliente</h2>

    <div class="card detail-card">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3">Dirección</dt>
            <dd class="col-sm-9">@((string.IsNullOrWhiteSpace(Model.Direccion) ? "—" : Model.Direccion))</dd>
        </dl>

        <div class="actions">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
