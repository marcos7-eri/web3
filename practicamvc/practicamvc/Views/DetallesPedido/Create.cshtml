@model practicamvc.Models.DetallePedidoModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Nuevo detalle";
}

<style>
    .form-card {
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        padding: 2rem;
        background: #fff;
        max-width: 900px;
        margin: 0 auto;
    }

    h2 {
        font-weight: 700;
        color: #3a3a3a;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .form-label {
        font-weight: 600;
        color: #444;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 10px 14px;
    }

    .btn-primary {
        border-radius: 25px;
        padding: 10px 24px;
        font-weight: 600;
        text-transform: uppercase;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.15);
        }

    .btn-secondary {
        border-radius: 25px;
        padding: 10px 24px;
        font-weight: 600;
    }

    .form-text {
        font-size: 0.85rem;
        color: #777;
    }
</style>

<h2>Nuevo detalle</h2>

<form asp-action="Create" novalidate class="form-card">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="IdPedido" class="form-label"></label>
            <select asp-for="IdPedido" class="form-select" asp-items="ViewBag.Pedidos"></select>
            <span class="form-text">Elija un pedido: se muestra “Pedido # — Cliente”.</span>
            <span asp-validation-for="IdPedido" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="IdProducto" class="form-label"></label>
            <select asp-for="IdProducto" class="form-select" asp-items="ViewBag.Productos"></select>
            <span asp-validation-for="IdProducto" class="text-danger"></span>
        </div>
    </div>

    <div class="row g-3 mt-1">
        <div class="col-md-6">
            <label asp-for="Cantidad" class="form-label"></label>
            <input asp-for="Cantidad" class="form-control" type="number" min="1" step="1" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="PrecioUnitario" class="form-label"></label>
            <input asp-for="PrecioUnitario" class="form-control" inputmode="decimal" step="0.01" min="0" />
            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3 d-flex gap-2 justify-content-center">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
