@model IEnumerable<practicamvc.Models.ClienteModel>
@{
    ViewData["Title"] = "Clientes";
}

<style>
    .page-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 1.5rem;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .page-title {
        font-weight: 700;
        font-size: 1.8rem;
        color: #3a3a3a;
        margin: 0;
    }

    .btn-primary {
        border-radius: 25px;
        padding: 10px 22px;
        font-weight: 600;
        text-transform: uppercase;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.15);
        }

    .search-form input {
        border-radius: 10px;
        padding: 10px 15px;
    }

    .table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
    }

        .table thead {
            background: #f9f9fb;
        }

        .table th {
            font-weight: 600;
            color: #555;
        }

        .table td {
            vertical-align: middle;
        }

    .btn-sm {
        border-radius: 8px;
        padding: 6px 12px;
        font-weight: 600;
    }

    .btn-info {
        background: #3b82f6;
        border: none;
    }

        .btn-info:hover {
            background: #2563eb;
        }

    .btn-warning {
        background: #facc15;
        border: none;
    }

        .btn-warning:hover {
            background: #eab308;
        }

    .btn-danger {
        background: #ef4444;
        border: none;
    }

        .btn-danger:hover {
            background: #dc2626;
        }
</style>

<div class="page-container">
    <div class="page-header">
        <h2 class="page-title">Clientes</h2>
        <a asp-action="Create" class="btn btn-primary">Nuevo cliente</a>
    </div>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }

    <form method="get" class="row g-2 mb-3 search-form">
        <div class="col-auto">
            <input type="text" name="q" value="@ViewBag.Q" class="form-control" placeholder="Buscar por nombre, email, teléfono..." />
        </div>
        <div class="col-auto">
            <button class="btn btn-outline-secondary" type="submit">Buscar</button>
        </div>
    </form>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th style="width:190px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Nombre</td>
                    <td>@c.Email</td>
                    <td>@c.Telefono</td>
                    <td>@(string.IsNullOrWhiteSpace(c.Direccion) ? "—" : c.Direccion)</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info text-white">Ver</a>
                        <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
