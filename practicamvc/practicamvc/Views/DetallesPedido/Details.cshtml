@model practicamvc.Models.DetallePedidoModel
@{
    ViewData["Title"] = "Detalle del ítem";
}

<style>
    .details-card {
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        padding: 2rem;
        background: #fff;
        max-width: 800px;
        margin: 0 auto;
    }

    h2 {
        font-weight: 700;
        color: #2c3e50;
        text-align: center;
        margin-bottom: 1.5rem;
    }

    dt {
        font-weight: 600;
        color: #444;
    }

    dd {
        color: #555;
    }

    .btn-warning {
        border-radius: 25px;
        padding: 10px 22px;
        font-weight: 600;
        text-transform: uppercase;
        background: linear-gradient(135deg, #f39c12, #d35400);
        border: none;
        color: white;
    }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.15);
            color: white;
        }

    .btn-secondary {
        border-radius: 25px;
        padding: 10px 22px;
        font-weight: 600;
    }
</style>

<h2>Detalle del ítem</h2>

<div class="details-card">
    <dl class="row mb-0">
        <dt class="col-sm-3"># Detalle</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Pedido</dt>
        <dd class="col-sm-9">#@Model.IdPedido — @(Model.Pedido?.Cliente?.Nombre ?? "—")</dd>

        <dt class="col-sm-3">Producto</dt>
        <dd class="col-sm-9">@Model.Producto?.Nombre</dd>

        <dt class="col-sm-3">Cantidad</dt>
        <dd class="col-sm-9">@Model.Cantidad</dd>

        <dt class="col-sm-3">Precio unit. (Bs)</dt>
        <dd class="col-sm-9">@Model.PrecioUnitario.ToString("N2")</dd>

        <dt class="col-sm-3">Subtotal (Bs)</dt>
        <dd class="col-sm-9">@((Model.Cantidad * Model.PrecioUnitario).ToString("N2"))</dd>
    </dl>

    <div class="d-flex gap-2 justify-content-center mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
